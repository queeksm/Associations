<p id="notice"><%= notice %></p>
<p><%= @users.username %></p>
<h1>CREATED EVENTS</h1>
<% @users.events.each do |ev| %>
 <div>
 <strong><%= ev.name %> </strong>
 <span><%= ev.location %> </span>
 <span><%= ev.date %> </span>
 </div>
<% end %>

<table>
  <thead>
    <tr>
      <td>EVENT STATUS</td>
      <td>EVENT NAME</td>
      <td>EVENT LOCATION</td>
      <td>EVENT DATE</td>
      <td>CREATOR USERNAME</td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.attend.each do |event| %>
      <tr>
        <% if event.date >= Time.now %>
          <td>Incoming event</td>
        <% else %> 
          <td>Attended event</td>
        <% end %>
        <td><%= event.name %></td>
        <td><%= event.location %></td>
        <td><%= event.date %></td>
        <td><%= event.creator.username %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
